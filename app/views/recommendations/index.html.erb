<% @recommendations.each do |recommendation| %>
  <tr>
    <td><%= recommendation.user %></td>
    <td><%= recommendation.product %></td>
    <td><%= link_to 'Show', recommendation %></td>
    <td><%= link_to 'Edit', edit_recommendation_path(recommendation) %></td>
    <td><%= link_to 'Destroy', recommendation, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

